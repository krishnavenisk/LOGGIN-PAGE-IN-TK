import tkinter as tk
from tkinter import messagebox

def validate_user(username, password):
    if username == "krish" and password == "1234":
        return True
    return False


def open_dashboard(username):
    dashboard = tk.Toplevel()
    dashboard.title("Dashboard")
    dashboard.geometry("500x300")

    tk.Label(dashboard, text=f"Welcome, {username}", font=("Arial", 18)).pack(pady=40)
    tk.Button(dashboard, text="Logout", width=15, command=dashboard.destroy).pack(pady=20)


def login():
    username = entry_username.get()
    password = entry_password.get()

    if validate_user(username, password):
        messagebox.showinfo("Login Successful", f"Welcome, {username}!")
        open_dashboard(username)
    else:
        messagebox.showerror("Error", "Invalid Username or Password")


root = tk.Tk()
root.title("Login Page")
root.geometry("400x300")
root.resizable(False, False)

tk.Label(root, text="Login", font=("Arial", 20, "bold")).pack(pady=10)

tk.Label(root, text="Username:", font=("Arial", 12)).pack(pady=5)
entry_username = tk.Entry(root, width=30)
entry_username.pack()

tk.Label(root, text="Password:", font=("Arial", 12)).pack(pady=5)
entry_password = tk.Entry(root, width=30, show="*")
entry_password.pack()

tk.Button(root, text="Login", width=15, command=login).pack(pady=20)

root.mainloop()

